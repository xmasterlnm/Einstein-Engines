<controls:FancyWindow xmlns="https://spacestation14.io"
                           xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
                           xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                           SetSize="600 600"
                           MinSize="600 600">
    <BoxContainer Orientation="Vertical" Margin="5 0 5 0" VerticalExpand="True">
        <BoxContainer Orientation="Horizontal">
            <Label
            Text="Currently Inspected Account:"
            StyleClasses="LabelKeyText"/>
            <Label
            Name="AccountNameLabel"
            Text="none"/>
        </BoxContainer>
        <Button Name="NewAccount" Access="Public" Text="New Account"/>
        <BoxContainer Orientation="Horizontal">
            <Label
                Text="Funds:"
                StyleClasses="LabelKeyText"/>
            <BoxContainer
                Name="AccountsBox"
                Orientation="Horizontal"
                VerticalExpand="True">
            </BoxContainer>
        </BoxContainer>
    </BoxContainer>
</controls:FancyWindow>
